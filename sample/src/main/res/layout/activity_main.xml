<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:calendar="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".MainActivity">

    <com.andexert.calendarlistview.library.SimpleCalendarHeaderView
        android:id="@+id/pickerHeaderView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        calendar:headerColor="#ff0000"/>

    <com.andexert.calendarlistview.library.DayPickerView
        android:id="@+id/pickerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/pickerHeaderView"
        calendar:colorCurrentMonth="#ff0000"
        calendar:currentDaySelected="true"
        calendar:displayShortMonthLabel="true"
        calendar:enableMonthDayHeader="false"
        calendar:enableRangeDaySelect="false"
        calendar:textMonthFontPath="Roboto-Light.ttf"/>

</RelativeLayout>
